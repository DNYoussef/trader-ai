# Railway Deployment Environment Variables
# Copy this file and configure in Railway dashboard under Variables

# =============================================================================
# REQUIRED FOR RAILWAY
# =============================================================================

# Trading mode (paper = safe testing, live = real money)
TRADING_MODE=paper

# Alpaca API credentials (get from https://alpaca.markets)
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Security keys (generate new ones for production!)
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your_jwt_secret_here

# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
DATABASE_ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# OPTIONAL - CORS & NETWORKING
# =============================================================================

# Railway auto-sets PORT - do not override unless needed
# PORT=8000

# Allow specific origins for CORS (Railway domain auto-detected)
# CORS_ALLOW_ORIGIN=https://your-custom-domain.com

# =============================================================================
# OPTIONAL - EXTERNAL SERVICES
# =============================================================================

# HuggingFace (for AI features)
# HUGGINGFACE_TOKEN=your_hf_token

# Plaid (for financial data)
# PLAID_CLIENT_ID=your_plaid_client_id
# PLAID_SECRET=your_plaid_secret
# PLAID_ENV=sandbox

# =============================================================================
# OPTIONAL - LOGGING & MONITORING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable audit logging
AUDIT_ENABLED=true
